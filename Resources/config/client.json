{
    "name": "ICE Minerva",
    "operations": {
        "SetApplicationStatus": {
            "httpMethod": "PUT",
            "uri": "api/academicinformation/{username}/{courseId}/statuses/application",
            "summary": "Sets the application status",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "status": {
                    "location": "json",
                    "required": true
                }
            }
        },

        "SetBursaryStatus": {
            "httpMethod": "PUT",
            "uri": "api/academicinformation/{username}/{courseId}/statuses/bursary",
            "summary": "Sets the bursary status",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "status": {
                    "location": "json",
                    "required": true
                }
            }
        },

        "SetEnglishLanguageStatus": {
            "httpMethod": "PUT",
            "uri": "api/academicinformation/{username}/{courseId}/statuses/englishlanguage",
            "summary": "Sets the english language status",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "status": {
                    "location": "json",
                    "required": true
                }
            }
        },

        "CreateAcademicInformation": {
            "httpMethod": "PUT",
            "uri": "api/academicinformation/{username}/{courseId}",
            "summary": "Creates an Academic Information record",
            "parameters": {
                "username": {

                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "enrolmentStatusCode": {
                    "location": "json",
                    "required": false
                },
                "paymentStatusCode": {
                    "location": "json",
                    "required": false
                },
                "applicationStatusCode": {
                    "location": "json",
                    "required": false
                },
                "registrationStatusCode": {
                    "location": "json",
                    "required": false
                },
                "englishLanguageStatusCode": {
                    "location": "json",
                    "required": false
                },
                "bursaryStatusCode": {
                    "location": "json",
                    "required": false
                }
            }
        },
        "GetAllAcademicInformation": {
            "httpMethod": "GET",
            "uri": "api/academicinformation",
            "summary": "Gets a collection of AcademicInformation records",
            "responseClass": "array<Ice\\MinervaClientBundle\\Entity\\AcademicInformation>",
            "parameters": {
                "username": {
                    "location": "query",
                    "required": true
                }
            }
        },
        "GetAcademicInformation": {
            "httpMethod": "GET",
            "uri": "api/academicinformation/{username}/{courseId}",
            "summary": "Gets an Academic Information record",
            "responseClass": "Ice\\MinervaClientBundle\\Entity\\AcademicInformation",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                }
            }
        },
        "GetRegistrationStep": {
            "httpMethod": "GET",
            "uri": "api/registrations/{username}/{courseId}/steps/{stepName}",
            "summary": "Gets a registration step",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "stepName": {
                    "location": "uri",
                    "required": true
                }
            }
        },
        "SetRegistrationStep": {
            "httpMethod": "PUT",
            "uri": "api/registrations/{username}/{courseId}/steps/{stepName}",
            "summary": "Sets the registration step values",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "stepName": {
                    "location": "uri",
                    "required": true
                },
                "order": {
                    "location": "json",
                    "required": true
                },
                "description": {
                    "location": "json",
                    "required": true
                },
                "began": {
                    "location": "json",
                    "required": false
                },
                "updated": {
                    "location": "json",
                    "required": false
                },
                "completed": {
                    "location": "json",
                    "required": false
                },
                "registrationFieldValues": {
                    "location": "json",
                    "type": "array",
                    "additionalProperties": {
                        "fieldName": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        },
                        "order": {
                            "location": "json",
                            "type": "integer",
                            "required": true
                        },
                        "description": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        },
                        "value": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        }
                    }
                }
            }
        },
        "SetRegistration": {
            "httpMethod": "PUT",
            "uri": "api/registrations/{username}/{courseId}",
            "summary": "Sets the root registration",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "began": {
                    "location": "json",
                    "required": false
                },
                "updated": {
                    "location": "json",
                    "required": false
                },
                "completed": {
                    "location": "json",
                    "required": false
                }
            }
        },
        "SetRegistrationFieldValue": {
            "httpMethod": "PUT",
            "uri": "api/registrations/{username}/{courseId}/steps/{stepName}/fields/{fieldNameUri}",
            "summary": "Set a registration field value",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "stepName": {
                    "location": "uri",
                    "required": true
                },
                "fieldNameUri": {
                    "location": "uri",
                    "required": true,
                    "sentAs": "fieldName"
                },
                "fieldName": {
                    "location": "json",
                    "required": true
                },
                "order": {
                    "location": "json",
                    "type": "integer",
                    "required": true
                },
                "description": {
                    "location": "json",
                    "type": "string",
                    "required": true
                },
                "value": {
                    "location": "json",
                    "type": "string",
                    "required": false
                }
            }
        },
        "GetBooking": {
            "httpMethod": "GET",
            "uri": "api/bookings/{id}",
            "summary": "Get a booking",
            "responseClass": "Ice\\MinervaClientBundle\\Entity\\Booking",
            "parameters": {
                "id": {
                    "location": "uri",
                    "required": true
                }
            }
        },
        "CancelBooking": {
            "httpMethod": "POST",
            "uri": "api/bookings/{username}/{courseId}/cancel",
            "summary": "Cancel a booking",
            "responseClass": "Ice\\MinervaClientBundle\\Entity\\Booking",
            "parameters": {
                "username": {
                    "location":"uri",
                    "required":true
                },
                "courseId": {
                    "location":"uri",
                    "required":true
                }
            }
        },
        "CreateBooking": {
            "httpMethod": "PUT",
            "uri": "api/bookings/{username}/{courseId}",
            "summary": "Create an empty booking",
            "parameters": {
                "username": {
                    "location":"uri",
                    "required":true
                },
                "courseId": {
                    "location":"uri",
                    "required":true
                },
                "orderReference": {
                    "location":"json",
                    "required":false,
                    "type":"string"
                },
                "bookedBy": {
                    "location":"json",
                    "required":true,
                    "type":"string"
                },
                "suborderGroup": {
                    "location":"json",
                    "required":false,
                    "type":"string"
                },
                "bookingDate": {
                    "location":"json",
                    "required": false,
                    "type": "string"
                },
                "bookingItems": {
                    "location": "json",
                    "type": "array",
                    "additionalProperties": {
                        "code": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        },
                        "description": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        },
                        "price": {
                            "location": "json",
                            "type": "integer",
                            "required": true
                        },
                        "category": {
                            "location": "json",
                            "type": "integer",
                            "required": true
                        }
                    }
                }
            }
        },
        "AddBookingItem": {
            "httpMethod": "POST",
            "uri": "api/bookings/{username}/{courseId}/items",
            "summary": "Add a booking item",
            "parameters": {
                "username": {
                    "location": "uri",
                    "required": true
                },
                "courseId": {
                    "location": "uri",
                    "required": true
                },
                "bookingItems": {
                    "location": "json",
                    "type": "array",
                    "additionalProperties": {
                        "code": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        },
                        "description": {
                            "location": "json",
                            "type": "string",
                            "required": true
                        },
                        "price": {
                            "location": "json",
                            "type": "integer",
                            "required": true
                        },
                        "category": {
                            "location": "json",
                            "type": "integer",
                            "required": true
                        }
                    }
                }
            }
        }
    }
}
